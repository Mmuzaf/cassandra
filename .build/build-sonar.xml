<project basedir="." name="apache-cassandra--sonar-tasks" xmlns:sonar="antlib:org.sonar.ant">

    <property name="sonar.host.url" value="http://localhost:9000" />
    <property name="sonar.projectKey" value="org.sonarqube:sonarqube-scanner-ant" />
    <property name="sonar.projectName" value="SonarScanner for Ant Usage" />
    <property name="sonar.projectVersion" value="1.0" />
    <property name="sonar.sources" value="src" />
    <property name="sonar.java.binaries" value="build" />
    <property name="sonar.java.libraries" value="lib/*.jar" />

    <condition property="no-sonar">
        <or>
            <isset property="no-sonar"/>
        </or>
    </condition>

    <target name="_init-sonar" depends="resolver-retrieve-build,build" unless="no-sonar">
        <path id="sonar.lib.path">
            <!-- Make sure to exclude loggers as we use DEBUG logging causing the output to be very dense... -->
            <path refid="cassandra.classpath.test.nologgers" />
        </path>
<!--        <taskdef resource="edu/umd/cs/findbugs/anttask/tasks.properties" classpathref="spotbugs.lib.path" />-->
    </target>

